---
import {
	Card,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/card";
import Form from "@/components/forms/signup.svelte";
import Layout from "@/layouts/auth.astro";
---

<Layout>
	<Card class="w-sm">
		<CardHeader>
			<CardTitle>Create your account</CardTitle>
