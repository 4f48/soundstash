---
import * as Card from "@/components/card";
import Form from "@/components/forms/reset-password/request.svelte";
import Layout from "@/layouts/auth.astro";
---

<Layout backDestination="/auth/signin" title="Forgot password">
	<Card.Root class="w-sm">
		<Card.Header>
			<Card.Title>Forgot your password?</Card.Title>
			<Card.Description
				>Enter your email to reset your password.</Card.Description
			>
		</Card.Header>
		<Form client:idle />
	</Card.Root>
</Layout>
