---
import {
	Card,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/card";
import Form from "@/components/forms/reset-password/request.svelte";
import Layout from "@/layouts/auth.astro";
---

<Layout backDestination="/auth/signin">
	<Card class="w-sm">
		<CardHeader>
			<CardTitle>Forgot your password?</CardTitle>
			<CardDescription>Enter your email to reset your password.</CardDescription
			>
		</CardHeader>
		<Form client:idle />
	</Card>
</Layout>
