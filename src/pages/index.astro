---
import Layout from "@/layouts/header.astro";
import Button from "@/components/button.svelte";
import {
	Icon,
	Document,
	MusicalNote,
	GlobeAsiaAustralia,
	LockClosed,
	Server,
	UserGroup,
} from "svelte-hero-icons";
import { ListItem } from "@/components/landing";
import { Accordion } from "@/components/accordion";

const description =
	"Upload FLAC, MP3, or Opus files and stream them without compression from any device. 100 MB free storage, open-source platform, pay only for what you use.";

const faq: App.AccordionItem[] = [
	{
		title: "What makes SoundStash different from other streaming services?",
		content:
			"With SoundStash, your music truly belongs to you. We provide secure cloud storage and streaming so you can listen to your collection from any device at any time. You are free to export or download your files whenever you want. We deliver compression-free, high-quality streaming, and there is no extra cost for this feature.",
	},
	{
		title: "What audio formats are supported?",
		content:
			"SoundStash streams MP3, FLAC, and Opus files. You can choose MP3 or Opus to store more music, or select FLAC if you want the highest audio quality.",
	},
	{
		title: "Is there any compression or quality loss?",
		content:
			"Absolutely not! At SoundStash, we believe in preserving your music exactly as the artist intended. We stream your music in its original form, so you always hear what you uploaded. Our service does not apply any additional compression or cause any loss in quality.",
	},
	{
		title: "Is it any good?",
		content: "Yes.",
	},
];
---

<Layout
	description={description}
	title="Lossless Personal Music Streaming & Cloud Storage"
>
	<section class="relative overflow-hidden px-4 py-20 lg:py-32">
		<div class="relative mx-auto max-w-6xl text-center">
			<h1
				class="mb-6 text-4xl font-bold tracking-tight sm:text-5xl lg:text-6xl"
			>
				Your Music, <span class="text-primary">Your Rules</span>
			</h1>
			<p class="text-fg1 mx-auto mb-8 max-w-2xl text-lg sm:text-xl">
				SoundStash is the music streaming platform where you own your music.
				Upload any audio file and enjoy high-fidelity streaming from anywhere in
				the world.
			</p>
			<div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
				<Button href="/auth/signup" size="lg"> Get Started </Button>
				<Button href="#features" size="lg" variant="outline">
					Learn More
				</Button>
			</div>
			<p class="text-fg2 mt-4 text-sm">
				100 MB free storage • No credit card required
			</p>
		</div>
	</section>
	<section id="features" class="bg-bg1/30 px-4 py-20">
		<div class="mx-auto max-w-6xl">
			<div class="mb-16 text-center">
				<h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">
					Why SoundStash?
				</h2>
				<p class="text-fg1 mx-auto max-w-2xl text-lg">
					Built for music lovers who value quality and ownership.
				</p>
			</div>
			<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
				<div class="border-bg2 bg-bg rounded-lg border p-6">
					<div
						class="bg-primary/10 mb-4 inline-flex h-12 w-12 items-center justify-center rounded-sm"
					>
						<Icon class="text-primary size-7" src={MusicalNote} />
					</div>
					<h3 class="mb-2 text-xl font-semibold">High Quality Streaming</h3>
					<p class="text-fg1">
						No compression, no quality loss. Stream your music exactly as it was
						meant to be heard.
					</p>
				</div>
				<div class="border-bg2 bg-bg rounded-lg border p-6">
					<div
						class="bg-primary/10 mb-4 inline-flex h-12 w-12 items-center justify-center rounded-sm"
					>
						<Icon class="text-primary size-7" src={Document} />
					</div>
					<h3 class="mb-2 text-xl font-semibold">Any Format</h3>
					<p class="text-fg1">
						Upload MP3, FLAC, and Opus files. We support all your favorite audio
						formats.
					</p>
				</div>
				<div class="border-bg2 bg-bg rounded-lg border p-6">
					<div
						class="bg-primary/10 mb-4 inline-flex h-12 w-12 items-center justify-center rounded-sm"
					>
						<Icon class="text-primary size-7" src={GlobeAsiaAustralia} />
					</div>
					<h3 class="mb-2 text-xl font-semibold">Stream Anywhere</h3>
					<p class="text-fg1">
						Access your music library from any device with an internet
						connection, anywhere in the world.
					</p>
				</div>
				<div class="border-bg2 bg-bg rounded-lg border p-6">
					<div
						class="bg-primary/10 mb-4 inline-flex h-12 w-12 items-center justify-center rounded-sm"
					>
						<Icon class="text-primary size-7" src={LockClosed} />
					</div>
					<h3 class="mb-2 text-xl font-semibold">You Own It</h3>
					<p class="text-fg1">
						Complete ownership and control of your audio library. No platform
						restrictions, export anytime.
					</p>
				</div>
				<div class="border-bg2 bg-bg rounded-lg border p-6">
					<div
						class="bg-primary/10 mb-4 inline-flex h-12 w-12 items-center justify-center rounded-sm"
					>
						<Icon class="text-primary size-7" src={Server} />
					</div>
					<h3 class="mb-2 text-xl font-semibold">Affordable Storage</h3>
					<p class="text-fg1">
						Get started with 100 MB of free cloud storage; upgrade and pay only
						for what you use beyond that.
					</p>
				</div>
				<div class="border-bg2 bg-bg rounded-lg border p-6">
					<div
						class="bg-primary/10 mb-4 inline-flex h-12 w-12 items-center justify-center rounded-sm"
					>
						<Icon class="text-primary size-7" src={UserGroup} />
					</div>
					<h3 class="mb-2 text-xl font-semibold">Open Source Software</h3>
					<p class="text-fg1">
						SoundStash is built in the open, released under the GNU AGPL. The
						source code is available <a
							class="text-primary underline"
							href="https://github.com/4f48/soundstash">here</a
						>.
					</p>
				</div>
			</div>
		</div>
	</section>
	<section id="pricing" class="px-4 py-20">
		<div class="mx-auto max-w-4xl text-center">
			<h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">
				Simple, Usage Based Pricing
			</h2>
			<p class="text-fg1 mb-12 text-lg">
				Start free, upgrade and only pay for what you use.
			</p>
			<div class="grid gap-8 md:grid-cols-2">
				<div class="border-bg2 bg-bg rounded-lg border p-8">
					<h3 class="mb-2 text-2xl font-bold">Free</h3>
					<div class="space-x-sm mb-6">
						<span class="text-4xl font-bold">0€</span>
						<span class="text-fg1">/ forever</span>
					</div>
					<ul class="mb-8 space-y-3 text-left">
						<ListItem>100 MB cloud storage</ListItem>
						<ListItem>Compression-free streaming</ListItem>
						<ListItem>MP3, FLAC, Opus support</ListItem>
						<ListItem>Advertisement free</ListItem>
					</ul>
					<Button
						class="hover:bg-bg1/50 w-full"
						href="/auth/signup"
						size="lg"
						variant="outline"
					>
						Get Started
					</Button>
				</div>
				<div
					class="border-primary/20 bg-primary/5 relative rounded-lg border p-8"
				>
					<div
						class="bg-primary text-bg absolute -top-3 left-1/2 -translate-x-1/2 rounded-full px-3 py-1 text-xs font-medium"
					>
						Coming Soon&trade;
					</div>
					<h3 class="mb-2 text-2xl font-bold">Flex</h3>
					<div class="space-x-sm mb-6">
						<span class="text-4xl font-bold">0.05€</span>
						<span class="text-fg1">/ GB-month</span>
					</div>
					<ul class="mb-8 space-y-3 text-left">
						<ListItem>All features from Free</ListItem>
						<ListItem>Up to 100 GB cloud storage</ListItem>
						<ListItem>Only pay for what you use</ListItem>
						<ListItem>Support SoundStash developers</ListItem>
					</ul>
					<Button class="w-full" disabled size="lg">Coming Soon</Button>
				</div>
			</div>
		</div>
	</section>
	<section id="faq" class="bg-bg1/30 px-4 py-20">
		<div class="mx-auto max-w-4xl">
			<div class="mb-16 text-center">
				<h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">
					Frequently Asked Questions
				</h2>
				<p class="text-fg1 text-lg">
					Everything you need to know about SoundStash.
				</p>
			</div>

			<div class="space-y-6">
				<Accordion client:visible items={faq} type="multiple" />
			</div>
		</div>
	</section>
	<section
		class="from-primary/10 via-primary/5 to-primary/10 bg-gradient-to-r px-4 py-20"
	>
		<div class="mx-auto max-w-4xl text-center">
			<h2 class="mb-4 text-3xl font-bold tracking-tight sm:text-4xl">
				Ready to Own Your Music?
			</h2>
			<p class="text-fg1 mb-8 text-lg">
				Join SoundStash today and take control of your audio library. No
				bullshit, no restrictions, just your music the way you want it.
			</p>
			<div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
				<Button href="/auth/signup" size="lg"> Start Free Today </Button>
				<Button
					class="hover:bg-bg1/50"
					href="/auth/signin"
					size="lg"
					variant="outline"
				>
					Sign In
				</Button>
			</div>
		</div>
	</section>
</Layout>
